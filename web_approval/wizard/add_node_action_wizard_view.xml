<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="add_node_action_wizard_form" model="ir.ui.view">
            <field name="name">add.node.action.wizard.form</field>
            <field name="model">add.node.action.wizard</field>
            <field name="arch" type="xml">
                <form string="添加动作向导">
                    <group>
                        <group>
                            <field name="source_node_id" options="{'no_create':1, 'no_open':1}" domain="[('flow_id', '=', flow_id)]" required="1" readonly="1"/>
                            <field name="condition"/>
                        </group>
                        <group>
                            <field name="target_node_id" options="{'no_create':1, 'no_open':1}" domain="[('flow_id', '=', flow_id)]" required="1" readonly="1"/>
                            <field name="flow_id" invisible="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="button_ok" type="object" string="确认" class="oe_highlight"/>
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
